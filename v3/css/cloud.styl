body
  width 100%

#sk
  background-image -webkit-linear-gradient(135deg, hsla(62, 100%, 50%, .5), hsla(322, 100%, 50%, .5))
  background-image linear-gradient(-45deg, hsla(62, 100%, 50%, .5), hsla(322, 100%, 50%, .5))
  -webkit-animation hue-rot 20s infinite alternate
  animation hue-rot 20s infinite alternate
  -webkit-perspective 400
  perspective 400
  position absolute
  left 0
  top 0
  right 0
  bottom 0
  overflow hidden
  filter blur(4px) !important

#clds
  position absolute
  left 50%
  top 50%
  margin-left -256px
  margin-top -256px
  height 512px
  width 512px
  -webkit-transform-style preserve-3d
  transform-style preserve-3d
  div
    -webkit-transform-style preserve-3d
    transform-style preserve-3d

.bl
  position absolute
  left 256px
  top 256px
  width 20px
  height 20px
  margin-left -10px
  margin-top -10px

.clay
  position absolute
  left 50%
  top 50%
  width 256px
  height 256px
  margin-left -128px
  margin-top -128px
  -webkit-transition opacity .5s ease-out
  transition opacity .5s ease-out

@-webkit-keyframes hue-rot {
  100% {
    -webkit-filter: hue-rotate(360deg);
            filter: hue-rotate(360deg);
  }
}

@keyframes hue-rot {
  100% {
    -webkit-filter: hue-rotate(360deg);
            filter: hue-rotate(360deg);
  }
}