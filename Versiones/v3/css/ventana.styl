.window {
  border: solid 1px #191919;
  border-radius: 4px;
  overflow: hidden;
  width: calc(57% - 90px);
  height: 80%;
  max-height: 710px;
  position: absolute;
  top: calc(30% - 130px);
  left: calc(44% - 200px);
  z-index: 1;
}
.window:before {
  content: "";
  background: white;
  position: absolute;
  z-index: 0;
  top: -20px;
  bottom: -20px;
  left: -20px;
  right: -20px;
  height: calc(100% +  40px );
  width: calc(100% +  40px );
  opacity: 1;
  -webkit-filter: blur(20px) brightness(1.5);
  filter: blur(20px) brightness(1.5);
}
.window .window-content {
  position: relative;
  width: 100%;
  height: 100%;
}
.window .window-content .header {
  width: 20%;
  font-size: 16px;
  text-align: center;
  line-height: 27px;
  font-weight: bold;
  margin: 0;
  height: 0;
  border-bottom: 25px solid rgb(25, 25, 25);
  border-right: 15px solid transparent;
  display: inline-block;
  color: #fff;
  text-shadow: 1px 1px 0 $gris
  padding: 0 10px;
  vertical-align: bottom;
}
.window .window-content .header .dots {
  position: relative;
  top: 0;
  left: 4px;
}
.window .window-content .header .dots .dot {
  float: left;
  width: 15px;
  height: 15px;
  margin: 4px -10px;
  border-radius: 50%;

}
.window .window-content .header .dots .dot.red {
  background-color: $AzulFl;
}
.window .window-content .body {
  padding: 1em;
  height: 90%;
}
.window .window-content .body p {
  color: $colorFdOscuro;
  text-align: center;
  font-size: 2.75em;
  font-family: $TxtRobotTitulo;
  opacity: 0.9;
  font-weight: bold;
  text-transform: uppercase;
}
#pie {
  background-image: url(../img/p1.png);
  background-size: 100% 100%;
  height: 200px;
  left: 0;
  margin-left: 7px;
  margin-top: 50.5%;
  position: absolute;
  top: 0;
  width: 219px;
  z-index: 1;
}
#pie::after {
  background-image: url(../img/p1_1.png);
  background-size: 100% 100%;
  bottom: 0;
  content: '';
  height: 19px;
  left: 218px;
  margin-bottom: 2px;
  position: absolute;
  width: 219px;
  z-index: 1;
}